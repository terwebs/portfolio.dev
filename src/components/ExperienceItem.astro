---

interface Props {
  title: string
  company: string
  description: string
  link?: string
  date: string
}

const { title, company, description, link, date } = Astro.props
---

<div
  class="relative mx-12 grid before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-white/15 before:content-[''] md:grid-cols-5 md:gap-10 md:space-x-4]"
>
  <div class="relative pb-12 md:col-span-2 ">
    <div class="sticky top-0">
      <span class=" -left-[42px] absolute rounded-full text-5xl text-sky-100"
        >&bull;</span
      >

      <h3 class="text-xl font-bold text-sky-200">{title}</h3>
      <h4 class="font-semibold text-xl text-sky-100">{company}</h4>
      <time class="p-0 m-0 text-sm dark:text-white/80">{date}</time>
    </div>
  </div>
  <div class="relative flex flex-col gap-2 pb-4 text-slate-300 md:col-span-3">
    {description}
   
  </div>
</div>