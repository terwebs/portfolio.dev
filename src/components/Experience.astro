---
import ExperienceItem from "./ExperienceItem.astro"
import SectionContainer from "./SectionContainer.astro"
import Briefcase from "./icons/Briefcase.astro"

const EXPERIENCIE = [
  {
    date: "February 2023 - Pesent",
    title: "Web Developer / PM",
    company: "Ahinko International",
    description: "Front-End Web developer and Technical Project Manager responsible for translating project requirements into functional web applications and migrating legacy technologies into modern web frameworks like ReactJS."
  },
  {
    date: "October 2017 – January 2023",
    title: "Sr. Team Leader",
    company: "Concentrix",
    description:
      "Supervised, coached and developed technical support engineers for Microsoft cloud technologies and lead process improvement initiatives using Lean Six Sigma and DMAIC methodologies.",
  },
  {
    date: "October 2014 – September 2017",
    title: "Coach",
    company: "Foundever",
    description:
      "Provided guidance and coaching to a group of customer service agents for a retail account.",
  },
  {
    date: "January 2014 – October 2014",
    title: "Web Developer Intern",
    company: "Ceroic",
    description:
      "Mantained Wordpress and Drupal sites for small businesses and assisted in the development of web applications using technologies like HTML, CSS and Javascript.",
  },
]
---
<SectionContainer id="experience">
  <h2 class="text-2xl sm:text-4xl text-sky-300 font-semibold mb-8 flex gap-x-2 items-center">
    <Briefcase class="size-6 sm:size-8"/>
    Profesional Experience
  </h2>
  <ol class="">
    {
      EXPERIENCIE.map((experiencie) => (
        <li class="">
          <ExperienceItem {...experiencie} />
        </li>
      ))
    }
  </ol>
</SectionContainer>

